# $Id: Makefile.in,v 1.3 1997-01-11 19:09:56 ghudson Exp $

SHELL=/bin/sh
CFLAGS=-I.
INSTALL=@INSTALL@
VPATH=@srcdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=-I. ${CPPFLAGS} ${CFLAGS}

all: jot

jot: jot.o
	${CC} ${LDFLAGS} -o jot jot.o ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man1
	${INSTALL} -m 555 jot ${DESTDIR}${bindir}
	${INSTALL} -m 444 ${srcdir}/jot.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f jot.o jot

distclean: clean
	rm -f config.cache config.log config.status Makefile
