SHELL=/bin/sh
CFLAGS=-I.
CC=@CC@
INSTALL=@INSTALL@
VPATH=@srcdir@
srcdir=@srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

all: jot

jot: jot.o
	${CC} ${LDFLAGS} -o jot jot.o ${LIBS}

check:

install:
	${srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man1
	${INSTALL} -m 555 jot ${DESTDIR}${bindir}
	${INSTALL} -m 444 ${srcdir}/jot.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f jot.o jot

distclean: clean
