#! /bin/sh

prefix=@prefix@
localstatedir=@localstatedir@

usage()
{
    cat <<EOF
Usage: scrollkeeper-rebuilddb [-p <SCROLLKEEPER_DB_DIR>] 
EOF

    exit $1
}

if test $# -ne 0 -a $# -ne 2; then
        usage 1
fi

if test $# -eq 0; then
    scrollkeeper_db_dir=`scrollkeeper-config --pkglocalstatedir`
else
    scrollkeeper_db_dir=$2
fi

rm -rf $scrollkeeper_db_dir/*

scrollkeeper-update -p $scrollkeeper_db_dir

exit 0
