#### insert configury here
BUILDTOP=$(C)$(S)$(U)$(U)
SRCS=pfrom.c popmail.c $(REGEX3SRC)
CODE=${SRCS} 

DEFINES = -DKPOP -DHAVE_POP3_TOP
LIBS=${KRB_LIB} ${HESIOD_LIB} ${DES_LIB}
DEPLIBS=${KRB_LIBDEP} ${DES_LIBDEP}

all:: pfrom

#program(pfrom,pfrom.o popmail.o,${DEPLIBS},${LIBS},${PROGDIR})
pfrom: pfrom.o popmail.o $(REGEX3OBJ) ${DEPLIBS}
	$(CC) $(CFLAGS) -o $@ pfrom.o popmail.o $(REGEX3OBJ) ${LIBS}

install::
	$(INSTALLPROG) pfrom ${DESTDIR}${PROGDIR}/pfrom
	$(INSTALLFILE) $(srcdir)/pfrom.1 ${DESTDIR}${MANDIR}/man1/pfrom.1

clean::
	$(RM) pfrom pfrom.o popmail.o $(REGEX3OBJ)

distclean:: clean
	$(RM) *~ core
	$(RM) Makefile config.status 

