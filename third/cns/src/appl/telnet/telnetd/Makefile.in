#### include configury here

BUILDTOP=$(C)$(S)$(U)$(U)$(U)

AUTH_DEF=-DAUTHENTICATION -DKRB4 -DENCRYPTION -DLOGIN_PROGRAM=\"$(DAEMDIR)/login.krb\"
OTHERDEFS=-DKLUDGELINEMODE -DDIAGNOSTICS -DENV_HACK -DOLD_ENVIRON
LOCALINCLUDES=-I.. -I$(srcdir)/..
DEFINES = $(AUTH_DEF) $(OTHERDEFS) $(LOCALINCLUDES)
ARPA_TELNET= $(srcdir)/../arpa/telnet.h
#COMERRLIB=$(BUILDTOP)/util/et/libcom_err.a
#KLIB = $(TOPLIBD)/libkrb5.a $(TOPLIBD)/libcrypto.a $(ISODELIB) $(COMERRLIB)
KLIB = $(KRB_LIB) $(DES_LIB) $(COM_ERR)
#DEPKLIB = $(TOPLIBD)/libkrb5.a $(TOPLIBD)/libcrypto.a $(COMERRLIB)
DEPKLIB = $(KRB_LIBDEP) $(DES_LIBDEP) $(COMM_ERR_DEP)

SRCS=	$(srcdir)/telnetd.c \
	$(srcdir)/state.c \
	$(srcdir)/termstat.c \
	$(srcdir)/slc.c \
	$(srcdir)/sys_term.c \
	$(srcdir)/utility.c \
	$(srcdir)/global.c \
	$(srcdir)/authenc.c \
	$(GETTYSRC)
OBJS=	telnetd.o \
	state.o \
	termstat.o \
	slc.o \
	sys_term.o \
	utility.o \
	global.o \
	authenc.o \
	$(GETTYOBJ)

all: telnetd

telnetd: $(OBJS) $(DEPKLIB) ../libtelnet/libtelnet.a
	$(CC) -o $@ $(CFLAGS) $(OBJS) ../libtelnet/libtelnet.a $(KLIB) $(TERMLIB) $(LIBS)

clean:
	$(RM) telnetd *.o

distclean:: clean
	$(RM) *~ core
	$(RM) Makefile config.status 

depend:

install:
	$(INSTALLPROG) telnetd $(DESTDIR)$(DAEMDIR)/telnetd
	$(INSTALLFILE) $(srcdir)/telnetd.8 ${DESTDIR}$(MANDIR)/man8/telnetd.8

authenc.o: authenc.c telnetd.h
global.o: global.c defs.h ext.h $(ARPA_TELNET)
slc.o: slc.c telnetd.h defs.h ext.h $(ARPA_TELNET)
state.o: state.c telnetd.h defs.h ext.h $(ARPA_TELNET)
sys_term.o: sys_term.c telnetd.h pathnames.h defs.h ext.h $(ARPA_TELNET)
telnetd.o: telnetd.c telnetd.h defs.h ext.h $(ARPA_TELNET)
termstat.o: termstat.c telnetd.h defs.h ext.h $(ARPA_TELNET)
utility.o: utility.c telnetd.h defs.h ext.h $(ARPA_TELNET)

