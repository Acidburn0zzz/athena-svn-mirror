#
# install this as /etc/rc2.d/S70cns under UnixWare
#
# usage: S70cns start
#

case "$1" in
start)
	(/usr/kerberos/etc/kerberos) > /dev/null < /dev/null 2>&1 &
	(/usr/kerberos/etc/kadmind -n) > /dev/null < /dev/null 2>&1 &
	;;
stop)
	kill `/usr/bin/ps -e \
	| /usr/bin/awk '/kerberos/ || /kadmind/ { print $1}'` 2>/dev/null
	;;
*)
	exit 1
esac
