#
# Configuration file for OAF
#
prefix=@prefix@
exec_prefix=@exec_prefix@

orbit_includes="`orbit-config --cflags server`"
orbit_libs_output="`orbit-config --use-service=name --libs server`"

orbit_libdirs=
orbit_libs=
for i in $orbit_libs_output; do
	case "$i" in
	-L*|-R*) orbit_libdirs="$orbit_libdirs $i" ;;
	*) orbit_libs="$orbit_libs $i" ;;
	esac
done

OAF_LIBDIR="-L$ATHTOOLROOT@libdir@ $orbit_libdirs"
OAF_LIBS="-loaf $orbit_libs"
OAF_INCLUDEDIR="-I$ATHTOOLROOT@includedir@ $orbit_includes"
MODULE_VERSION="oaf-@VERSION@"

