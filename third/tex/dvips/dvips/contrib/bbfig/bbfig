#! /bin/sh

# Script to stick bounding box finder in front of a postscript file
#    Adapted from Ned's original

# $Header: /afs/dev.mit.edu/source/repository/third/tex/dvips/dvips/contrib/bbfig/bbfig,v 1.1.1.1 1996-10-09 06:40:29 ghudson Exp $

# BBPSDIR=<wherever>  # Define this if bb.ps doesn't live in same
                      #   directory as bbfig

if [ ! -f ${BBPSDIR=`dirname $0`}/bb.ps ]
then
    echo >&2 "Can't locate bb.ps"
    exit 1
fi

case $# in
    0)    cat $BBPSDIR/bb.ps -
	  ;;
    *)    cat $BBPSDIR/bb.ps "$@"
	  ;;
esac
