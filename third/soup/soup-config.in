#!/bin/sh

# This script was borrowed from Gtk (and Glib)

depend_libs="@XML_LIBS@"
depend_cflags="@XML_CFLAGS@"

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage()
{
	cat <<EOF
Usage: soup-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
Libraries:
	soup
	soup-apache
	wsdl
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

lib_soup=yes

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    soup)
      lib_soup=yes
      ;;
    soup-apache)
      lib_soup_apache=yes
      ;;
    wsdl)
      lib_wsdl=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi

if test "$echo_cflags" = "yes"; then
      if test "@includedir@" != "/usr/include" ; then
        includes="-I@includedir@/soup"
        for i in $depend_cflags ; do
          if test $i = "-I@includedir@/soup"; then
            includes=""
          fi
        done
      fi
      echo $includes $depend_cflags
fi

if test "$echo_libs" = "yes"; then
      my_depend_libs=
      for i in $depend_libs ; do
        if test $i != "-L@libdir@" ; then
	  my_depend_libs="$my_depend_libs $i"
        fi
      done

      libs="-L@libdir@"

      if test "$lib_soup" = "yes"; then
	libs="$libs -lsoup"
      fi

      if test "$lib_soup_apache" = "yes"; then
	libs="$libs -lsoup-apache"
      fi

      if test "$lib_wsdl" = "yes"; then
	libs="$libs -lwsdl"
      fi

      echo $libs $my_depend_libs
fi      

