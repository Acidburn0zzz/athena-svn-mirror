# $Id: Makefile.in,v 1.3 1997-01-11 19:09:26 ghudson Exp $

SHELL=/bin/sh
INSTALL=@INSTALL@
VPATH=@srcdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=-I.. ${CPPFLAGS} ${CFLAGS}
OBJS=ctl.o ctl_transact.o display.o get_addrs.o get_names.o \
	init_disp.o invite.o io.o look_up.o msgs.o talk.o

all: talk

talk: ${OBJS}
	${CC} ${LDFLAGS} -o talk ${OBJS} -lcurses ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man1
	${INSTALL} -m 555 talk ${DESTDIR}${bindir}
	${INSTALL} -m 444 ${srcdir}/talk.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f ${OBJS} talk

distclean: clean
