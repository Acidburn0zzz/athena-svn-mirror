echo In ${package}: cp config.sh.$HOSTTYPE config.sh &&
cp "config.sh.$HOSTTYPE" config.sh
echo In ${package}: performing variable substitutions &&
for i in *.SH x2p/*.SH; do sh $i; done &&
echo In ${package}: make clean && make clean &&
echo In ${package}: make depend && make depend &&
echo In ${package}: make all && make all &&
echo In ${package}: make test && make test &&
echo In ${package}: make install DESTDIR=$srvd && make install DESTDIR=$srvd &&
echo In ${package}: running h2ph &&
sed -e '/^chdir/d' -e "s:/usr:$srvd/usr/:" h2ph > h2phsrvd &&
chmod 755 h2phsrvd &&
(cd /os/usr/include; $build/$package/h2phsrvd * */*) &&
(cd $srvd/usr/athena/include; $build/$package/h2phsrvd * */*)
