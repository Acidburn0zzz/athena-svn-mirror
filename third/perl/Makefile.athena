# $Id: Makefile.athena,v 1.1 1996-10-12 22:06:06 ghudson Exp $

SHELL=/bin/sh

configure:
	rm -f config.sh
	cp "config.sh.$$HOSTTYPE" config.sh

clean:
	${MAKE} clean

all:
	${MAKE} depend all

check:
	${MAKE} test

install:
	${MAKE} install "DESTDIR=$$SRVD"
	dir=`pwd`; \
	sed -e '/^chdir/d' -e "s:/usr:$$SRVD/usr/:" h2ph > h2phsrvd; \
	chmod 755 h2phsrvd; \
	(cd /os/usr/include && "$$dir/h2phsrvd" * */*); \
	(cd "$$SRVD/usr/athena/include"; "$$dir/h2phsrvd" * */*)
