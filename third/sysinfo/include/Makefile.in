# $Revision: 1.2 $
#
# Makefile for SysInfo include files
#

prefix		= @prefix@
srcdir		= @srcdir@
topsrcdir 	= @top_srcdir@
VPATH 		= @srcdir@

@VarsMF@

INCDIR          = @includedir@
FILES		= mcsysinfo.h

all: FRC

mcdall:
	@for f in $(FILES) ; do \
		b=`echo $$f | sed -e 's;.*/;;'`; \
		cmd="$(MCDADD) -R $(PROTOROOT) -d $(PROTOINC) \
			-t include/$$b -m 444 $(INSTALLOWN) $(srcdir)/$$f"; \
		echo $$cmd; \
		$$cmd; \
	done

install: $(FILES)
	@$(MKDIRHIER) $(DESTDIR)$(INCDIR); \
	for f in $(FILES) ; do \
		b=`echo $$f | sed -e 's;.*/;;'`; \
		cmd="$(INSTALLPROG) -c -m 444 $(INSTALLOWN) $$f $(DESTDIR)$(INCDIR)/$$b"; \
		echo $$cmd; \
		$$cmd; \
	done

clean:
	rm -f *~ core

distclean: clean
	rm -f Makefile

fullclean: distclean

FRC:
