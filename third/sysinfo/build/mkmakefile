#!/bin/sh
#
# $Id: mkmakefile,v 1.1.1.1 2001-03-20 18:01:30 ghudson Exp $
#
# Build a Makefile and output it on stdout.
#
Program=`basename $0`

for mf in $*; do
	if [ -f $mf ]; then
		echo "# ${Program}: Found $mf "
		List="$List $mf"
	else
		echo "# ${Program}: NOT Found $mf "
	fi
done

if [ -z "$List" ]; then
	echo "${Program}: None of the makefiles were found."
	exit 1
fi

cat $List
	
