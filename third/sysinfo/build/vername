#!/bin/sh
#
# $Id: vername,v 1.1.1.2 2001-03-20 18:01:27 ghudson Exp $
#
# Get Version Name
#
PATH=/usr/ucb:/usr/bin:/bin:/usr/bsd:$PATH
export PATH

Program=$1
Cmd=$*

set `$Cmd | head -1 | tr '[A-Z]' '[a-z]'`
#
# See if version string is one of:
#   Version X.X (STATUS) ...
#   X.X STATUS
#   Program Version X.X (STATUS) ...
#
if [ "$1" = "version" ]; then
    Version=$2
    Status=`echo $3 | sed -e 's;);;' -e 's;(;;'`
elif [ $# -eq 2 ]; then
    Version=$1
    Status=$2
else
    Version=$3
    Status=`echo $4 | sed -e 's;);;' -e 's;(;;'`
fi

BaseProg=`basename $Program`
if [ "$Status" = "final" -o "$Status" = "release" ]; then
	echo ${BaseProg}-${Version}
else
	echo ${BaseProg}-${Version}-${Status}
fi
