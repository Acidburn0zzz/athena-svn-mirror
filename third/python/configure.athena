# $Id: configure.athena,v 1.1 2004-07-07 18:26:20 zacheiss Exp $

case $OS in
solaris)
  CPPFLAGS="-I/usr/athena/include -I/usr/sfw/include -I/usr/openwin/include" LDFLAGS="-L/usr/athena/lib -L/usr/sfw/lib -L/usr/openwin/lib -Wl,-R/usr/athena/lib -Wl,-R/usr/sfw/lib" ./configure "$@"
  ;;
linux)
  CPPFLAGS="-I/usr/athena/include -I/usr/X11R6/include" LDFLAGS="-L/usr/athena/lib -L/usr/X11R6/lib -Wl,-R/usr/athena/lib" ./configure "$@"
  ;;
esac
