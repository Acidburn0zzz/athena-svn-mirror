<Root>
  <commands>
    <cmd name="FileOpen" _label="_Open..." _tip="Open a file"
      pixtype="stock" pixname="Open" accel="*Control*o"/>

    <cmd name="FileClose" _label="_Close" _tip="Close window"
      pixtype="stock" pixname="Close" accel="*Control*w"/>

    <cmd name="ViewFullScreen" _label="_Full Screen" _tip="Toggle fullscreen mode"
      type="toggle" accel="F11" sensitive="0"/>

    <cmd name="HelpContents" _label="_Contents" _tip="Online manual for this application"
      pixtype="stock" pixname="Help" accel="F1"/>

    <cmd name="HelpAbout" _label="_About" _tip="About this application"
      pixtype="stock" pixname="About"/>

  </commands>

  <menu>
    <submenu name="File" _label="_File">
      <menuitem name="FileOpen" verb=""/>

      <placeholder name="File Items Placeholder" delimit="top"/>
      
      <placeholder name="Recents" delimit="top"/>

      <separator />

      <menuitem name="FileClose" verb=""/>
    </submenu>

    <submenu name="View" _label="_View">
      <menuitem name="ViewFullScreen" verb=""/>
      <placeholder name="Zoom Items Placeholder" delimit="top"/>
    </submenu>

    <placeholder name="Go">
      <placeholder name="Go Items Placeholder"/>
    </placeholder>

    <submenu name="Help" _label="_Help">
      <menuitem name="HelpContents" verb=""/>
      <menuitem name="HelpAbout"  verb=""/>
    </submenu>

  </menu>

  <dockitem name="Toolbar" behavior="exclusive">
    <toolitem name="TBOpen" _label="Open" verb="FileOpen"/>
    <control name="FileOpenMenu" verb=""/>    
  </dockitem>

  <!-- keybindings that should be available even with invisible menubar -->
  <keybindings>
    <accel name="*Control*o" verb="FileOpen" />
    <accel name="*Control*w" verb="FileClose" />
    <accel name="F1" verb="HelpContents" />
  </keybindings>

</Root>
