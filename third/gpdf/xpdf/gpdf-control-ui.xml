<Root>
  <commands>
    <cmd name="FileSaveAs" _label="_Save a Copy..."
      _tip="Save the current PDF document with a new filename"
      pixtype="stock" pixname="gtk-save-as"/>

    <cmd name="FileProperties" _label="Proper_ties"
      _tip="View properties of the displayed document"
      pixtype="stock" pixname="gtk-properties"/>

    <cmd name="FilePrint" _label="_Print..."
      _tip="Print the current file" accel="*Control*P"
      pixtype="stock" pixname="Print"/>

    <cmd name="ZoomIn"  _label="Zoom _In"  
      _tip="Expand to a larger size" accel="*Control*plus"
      pixtype="stock" pixname="gtk-zoom-in"/>
    
    <cmd name="ZoomOut" _label="Zoom _Out" 
      _tip="Shrink to a smaller size" accel="*Control*minus"
      pixtype="stock" pixname="gtk-zoom-out"/>

    <cmd name="ZoomFitWidth" _label="Fit page _width"
      _tip="Size to fit the page width"/>
      
    <cmd name="ZoomFit" _label="Best _Fit"
      _tip="Size to fit the page"
      pixtype="stock" pixname="gtk-zoom-fit"/>

    <cmd name="GoPagePrev"  _label="_Previous Page"
      _tip="View the previous page" accel="Page_Up"
      pixtype="stock" pixname="gtk-go-back"/>

    <cmd name="GoPageNext"  _label="_Next Page"
      _tip="View the next page" accel="Page_Down"
      pixtype="stock" pixname="gtk-go-forward"/>

    <cmd name="GoPageFirst" _label="_First Page"
      _tip="View the first page" accel="*Control*Home"
      pixtype="stock" pixname="gtk-goto-first"/>

    <cmd name="GoPageLast"  _label="_Last Page"
      _tip="View the last page" accel="*Control*End"
      pixtype="stock" pixname="gtk-goto-last"/>

    <cmd name="GoHistoryPrev"  _label="_Back"
      _tip="Go backward in history" accel="*Alt*Left"
      pixtype="stock" pixname="gtk-undo"/>

    <cmd name="GoHistoryNext"  _label="Fo_rward"
      _tip="Go forward in history" accel="*Alt*Right"
      pixtype="stock" pixname="gtk-redo"/>

  </commands>

  <menu>
    <submenu name="File" _label="_File">
      <placeholder name="File Items Placeholder">
	<menuitem name="FileSaveAs" verb=""/>

        <separator/>

	<menuitem name="FilePrint" verb="" accel="*Control*P"/>
	<menuitem name="FileProperties" verb=""/>
      </placeholder>
    </submenu>

    <submenu name="View" _label="_View">
      <placeholder name="Zoom Items Placeholder">
        <menuitem name="ZoomIn" verb=""/>
        <menuitem name="ZoomOut" verb=""/>
        <menuitem name="ZoomFit" verb=""/>
        <menuitem name="ZoomFitWidth" verb="" pixtype="pixbuf"/>

        <separator/>
      </placeholder>

	<menuitem name="ViewSidebar" id="ViewSidebar" 
         _label="_Sidebar" verb="" type="toggle" 
	 _tip="Change the visibility of the sidebar" accel="F9"/>
    </submenu>

    <submenu name="Go" _label="_Go">
      <placeholder name="Go Items Placeholder">
        <menuitem name="GoHistoryPrev" verb=""/>
        <menuitem name="GoHistoryNext" verb=""/>

        <separator/>

        <menuitem name="GoPagePrev" verb=""/>
        <menuitem name="GoPageNext" verb=""/>

        <separator/>

        <menuitem name="GoPageFirst" verb=""/>
        <menuitem name="GoPageLast" verb=""/>
      </placeholder>
    </submenu>
  </menu>

  <dockitem name="Toolbar">
    <separator />

    <toolitem name="FileSaveAs" _label="Save a Copy" verb=""/>

    <separator />

    <toolitem name="FilePrint" _label="Print" verb=""/>

    <separator />

    <toolitem name="GoHistoryPrev" _label="Back" verb=""/>
    <toolitem name="GoHistoryNext" _label="Forward" verb=""/>

    <separator />

    <toolitem name="GoPageFirst" _label="First" verb=""/>
    <toolitem name="GoPagePrev" _label="Previous" verb=""/>
    <toolitem name="GoPageNext" _label="Next" verb=""/>
    <toolitem name="GoPageLast" _label="Last" verb=""/>
    <placeholder name="Page Control Placeholder">
      <control name="PageControl"/>
    </placeholder>

    <separator />

    <toolitem name="ZoomIn" _label="In" verb=""/>
    <toolitem name="ZoomOut" _label="Out" verb=""/>
    <toolitem name="ZoomFit" _label="Best Fit" verb=""/>
    <toolitem name="ZoomFitWidth" _label="Fit Width" verb="" pixtype="pixbuf"/>
  </dockitem>

  <!-- so that they work even when the menubar is not visible -->
  <keybindings>
    <accel name="*Control*P" verb="FilePrint" />
    <accel name="*Control*plus" verb="ZoomIn" />
    <accel name="*Control*minus" verb="ZoomOut" />
    <accel name="Page_Up" verb="GoPagePrev" />
    <accel name="Page_Down" verb="GoPageNext" />
    <accel name="*Control*Home" verb="GoPageFirst" />
    <accel name="*Control*End" verb="GoPageLast" />
    <accel name="*Alt*Left" verb="GoHistoryPrev" />
    <accel name="*Alt*Right" verb="GoHistoryNext" />

    <!-- Umm, no, it's not a verb -->
    <!-- <accel name="F9" verb="ViewSidebar" /> -->
  </keybindings>

</Root>
