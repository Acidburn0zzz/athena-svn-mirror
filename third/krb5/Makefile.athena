# $Id: Makefile.athena,v 1.23 2000-04-02 00:57:58 ghudson Exp $

SHELL=/bin/sh

dist:
	cp "$$CONFIG_SITE" config.site.athena

prepare:
	rm -f src/config.cache
	cd src && CONFIG_SITE=`pwd`/config.site.athena CPPFLAGS=" " \
		./configure --without-hesiod \
		--with-ccopts=-I${ATHTOOLROOT}/usr/athena/include \
		--with-ldopts=-L${ATHTOOLROOT}/usr/athena/lib

clean:
	cd src && ${MAKE} clean

all:
	cd src && ${MAKE} depend all

check:

install:
	cd src && ${MAKE} install DESTDIR="$$SRVD"
