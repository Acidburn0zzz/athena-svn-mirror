# $Id: Makefile.athena,v 1.5 1998-03-20 23:36:13 ghudson Exp $

SHELL=/bin/sh

compiler.sun4:
	@/bin/athena/attach -h -n -q sunsoft
	@echo /mit/sunsoft/sun4bin/cc

prepare:
	CC=`${MAKE} -f Makefile.athena "compiler.$${HOSTTYPE}"` \
		./configure --prefix=/usr/gcc

clean:
	${MAKE} clean

all:
	${MAKE} all LANGUAGES=c
	${MAKE} stage1
	${MAKE} all CC="stage1/xgcc -Bstage1/" CFLAGS=-O2 LANGUAGES=C

check:

install:
	${MAKE} install "prefix=$$SRVD/usr/gcc" LANGUAGES=c
