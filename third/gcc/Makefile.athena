# $Id: Makefile.athena,v 1.24 2004-12-24 18:39:16 ghudson Exp $

dist:

# We can't use the Athena config.site file because it specifies
# cc to be gcc, and because we're installing into /usr/gcc.
prepare:
	rm -f config.cache
	CC=$$sprobin/cc PATH=/usr/gcc/bin:$$PATH ./configure \
	  --prefix=/usr/gcc --disable-shared --with-gnu-ld

clean:
	${MAKE} clean

all:
	${MAKE} bootstrap

check:

install: force
	${MAKE} install "prefix=$$SRVD/usr/gcc"
	mkdir -p "$$SRVD/usr/athena/bin"
	cd "$$SRVD/usr/gcc/bin" && for f in *; do \
	  rm -f ../../athena/bin/$$f && \
	  ln -s ../../gcc/bin/$$f ../../athena/bin/$$f; done

force:
