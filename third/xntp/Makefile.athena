# $Id: Makefile.athena,v 1.3 1998-06-04 18:27:11 ghudson Exp $

SHELL=/bin/sh

prepare:
	rm -f config.cache
	# Solaris 2.6's kernel PLL support is broken (at this patch
	# level); disable it.
	if [ "$$HOSTTYPE" = sun4 ]; then \
		echo "ac_cv_var_kernel_pll=no" > config.cache; \
	fi
	./configure

clean:
	${MAKE} clean

all:
	${MAKE} all

check:
	${MAKE} check

install:
	${MAKE} install DESTDIR="$$SRVD"
