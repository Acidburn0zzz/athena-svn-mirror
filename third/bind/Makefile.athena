# $Id: Makefile.athena,v 1.3 1998-07-05 05:27:43 ghudson Exp $

SHELL=/bin/sh

prepare:

clean:
	cd src && ${MAKE} clean

all:
	cd src && ${MAKE} "CC=$$COMPILER" CDEBUG=-g \
		DESTBIN=/usr/athena/bin \
		DESTSBIN=/etc/athena \
		DESTEXEC=/etc/athena \
		DESTMAN=/usr/athena/man \
		DESTHELP=/usr/athena/lib \
		DESTRUN=/var/athena

check:

install:
	cd src && ${MAKE} install "DESTDIR=$$SRVD"
	mkdir -p "$$SRVD/usr/athena/man"
	cd doc/man && ${MAKE} install "DESTDIR=$$SRVD" \
		DESTMAN=/usr/athena/man MANDIR=man OUT_EXT='' CATEXT='$$$$N'
