# This Makefile is a placeholder.  It exists merely to make
# sure that its directory gets created in the object directory
# tree when doing a build using separate object directories.

srcdir =	@srcdir@
VPATH =		@srcdir@
top_srcdir =	@top_srcdir@

SUBDIRS =
TARGETS =

@BIND9_MAKE_RULES@

mandir = 	@mandir@
DIRS = man/bin man/dnssec man/lwres

install::
	mkdir -p ${DESTDIR}${mandir}/man1
	mkdir -p ${DESTDIR}${mandir}/man3
	mkdir -p ${DESTDIR}${mandir}/man5
	mkdir -p ${DESTDIR}${mandir}/man8
	for dir in ${DIRS}; do \
	  for i in ${srcdir}/$$dir/*.[1358]; do \
	    (echo '.\" Dummy comment to avoid confusing man'; \
	     echo '.so /usr/athena/share/tmac/tmac.doc'; \
	     cat $$i;) > temp.man; \
	    name=`basename $$i`; \
	    num=`echo $$name | sed -e 's/.*\(.\)/\1/'`; \
	    install -c -m 444 temp.man ${DESTDIR}${mandir}/man$$num/$$name; \
	  done; \
	done
